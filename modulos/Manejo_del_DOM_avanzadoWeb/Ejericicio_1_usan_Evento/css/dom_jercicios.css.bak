/********  Reset Css  *******/

:root {
    --main-font: sans-serif;
    --font-siza: 16px;
    --main-color: #f7df1e;
    --main-modal-color: rgba(247, 222, 30, 0.85);
    --scond-color: rgba(34, 34, 34, 0.85);
    --container-width: 1200px;
}

html {
    box-sizing: border-box;
    font-family: var(--main-color);
    font-size: var(--font-siza);
    /*para que el contenido no se desplace bruzco*/
    scroll-behavior: smooth;
}

*,
*:before,
*:after {
    box-sizing: inherit;
}

body {
    margin: 0;
    overflow-x: hidden;
}

/********hamburgesa *******/
.header {
    position: sticky;
    top: 0;
    padding: 1rem;
    background-color: var(--main-color);
    color: var(--scond-color);
}

.header h1 {
    margin: 0;
    text-align: center;
}

.section {
    padding: 2rem;
    padding-top: 4rem;
    margin-left: auto;
    margin-right: auto;
    width: 100%;
    max-width: var(--container-width);
    min-height: 100vh;
    text-align: center;
}


img {
    max-width: 100%;
    height: auto;
}

.panel {
    position: fixed;
    z-index: 998;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    background-color: var(--scond-color);
    transition: transform .3s ease;
    /*de arriba*/
    /*transform: translate(0, -100%);*/

    /**de derecha*/
    transform: translate(100%, 0);
}

/*esta es la propiedad que va moverse con JS*/
.panel.is-active{
    transform: translate(0, 0);
}

.panel-btn {
    position: fixed;
    z-index: 999;
    bottom: 1vh;
    right: 1vw;
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--main-color);
}
.menu{
    width: inherit;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
    text-align: center;
}

.menu a{
    padding: 2rem;
    width: inherit;
    display: block;
    font-size: 1.5rem;
    text-decoration: none;
    color: var(--main-color);
    transition: all 0.3s ease;
}
.menu a:hover{

    font-weight: bold;
    color: var(--scond-color);
    background-color: var(--main-modal-color);


}